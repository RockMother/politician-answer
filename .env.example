# Required
BOT_TOKEN=your_telegram_bot_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional OpenAI settings
OPENAI_MODEL=gpt-4o-mini
OPENAI_SYSTEM_PROMPT=

# Optional: Path to custom prompt file (overrides default)
PROMPT_FILE=config/prompt.txt

# Optional: Comma-separated list of admin user IDs
# Get your ID from @userinfobot
ADMIN_USER_IDS=123456789,987654321

# Server settings
PORT=3000

# Worker mode (set to "true" to disable HTTP server)
# Use this for Render Background Worker
WORKER_MODE=false

# Retry settings for 409 errors (useful on Render free tier)
# Max number of retry attempts
MAX_RETRIES=10

# Delay between retries in milliseconds
RETRY_DELAY_MS=10000
